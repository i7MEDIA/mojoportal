CREATE PROCEDURE [dbo].[mp_Links_Update]

/*
Author:   			
Created: 			12/24/2004
Last Modified: 			8/7/2005

*/
	
@ItemID int, 
@ModuleID int, 
@Title nvarchar(255), 
@Url nvarchar(255), 
@ViewOrder int, 
@Description ntext, 
@CreatedDate datetime, 
@CreatedBy int ,
@Target nvarchar(20)


AS

UPDATE 		[dbo].[mp_Links] 

SET
			[ModuleID] = @ModuleID,
			[Title] = @Title,
			[Url] = @Url,
			Target = @Target,
			[ViewOrder] = @ViewOrder,
			[Description] = @Description,
			[CreatedDate] = @CreatedDate,
			[CreatedBy] = @CreatedBy
			
