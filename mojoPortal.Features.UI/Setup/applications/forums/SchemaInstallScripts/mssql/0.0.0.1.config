LEFT OUTER JOIN		[dbo].mp_Users u
ON		t.MostRecentPostUserID = u.UserID

LEFT OUTER JOIN		[dbo].mp_Users s
ON		t.StartedByUserID = s.UserID

WHERE	t.ForumID = @ForumID
		AND p.IndexID
Between @BeginSequence 
AND @EndSequence

ORDER BY	p.IndexID DESC

