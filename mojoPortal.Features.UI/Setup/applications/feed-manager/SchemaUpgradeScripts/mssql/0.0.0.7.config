ALTER PROCEDURE [dbo].[mp_RssFeeds_Update]

/*
Author:   			
Created: 			2005-03-27
Last Modified: 		2009-10-20


*/
	
@ItemID int, 
@ModuleID int, 
@Author nvarchar(100), 
@Url nvarchar(255), 
@RssUrl nvarchar(255),
@LastModUserGuid	uniqueidentifier,
@LastModUtc	datetime,
@ImageUrl nvarchar(255),
@FeedType nvarchar(20),
@PublishByDefault bit,
@SortRank int



AS

UPDATE 		[dbo].[mp_RssFeeds] 

SET
			[ModuleID] = @ModuleID,
			[Author] = @Author,
			[Url] = @Url,
			[RssUrl] = @RssUrl,
			LastModUserGuid = @LastModUserGuid,
			LastModUtc = @LastModUtc,
			ImageUrl = @ImageUrl,
			FeedType = @FeedType,
			PublishByDefault = @PublishByDefault,
			SortRank = @SortRank
			
WHERE
			[ItemID] = @ItemID

GO


