FROM mp_Polls p
JOIN mp_PollUsers pu ON p.PollGuid = pu.PollGuid AND pu.UserGuid = @UserGuid
JOIN mp_PollOptions po ON pu.OptionGuid = po.OptionGuid
ORDER BY ActiveFrom DESC, Question

