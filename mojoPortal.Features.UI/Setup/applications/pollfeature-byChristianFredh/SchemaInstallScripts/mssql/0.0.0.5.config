FROM mp_Polls, (SELECT SUM(Votes) AS TotalVotes 
				FROM mp_PollOptions 
				WHERE mp_PollOptions.PollGuid = @PollGuid) AS votes
WHERE PollGuid = @PollGuid
--AND Active = 1

