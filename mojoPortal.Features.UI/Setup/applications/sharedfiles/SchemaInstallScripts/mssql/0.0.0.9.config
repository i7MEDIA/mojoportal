CREATE PROCEDURE [dbo].[mp_SharedFiles_SelectByModule]

/*
Author:   			
Created: 			2005-01-05
Last Modified: 		2010-01-06

*/

@ModuleID		int,
@FolderID		int

AS
SELECT
		sf.[ItemID],
		sf.[ModuleID],
		sf.[UploadUserID],
		sf.[FriendlyName],
		sf.[OriginalFileName],
		sf.[ServerFileName],
		sf.[SizeInKB],
		sf.[UploadDate],
		sf.[FolderID],
		sf.ItemGuid,
		sf.FolderGuid,
		sf.UserGuid,
		sf.ModuleGuid,
		sf.[Description],
		sf.DownloadCount,
		u.[Name] As UserName
		
FROM
		[dbo].[mp_SharedFiles] sf

LEFT OUTER JOIN
		mp_Users u
ON		sf.UploadUserID = u.UserID

WHERE	sf.ModuleID = @ModuleID
		AND sf.FolderID = @FolderID
ORDER BY
	sf.[FriendlyName]

GO

SET QUOTED_IDENTIFIER ON

GO
