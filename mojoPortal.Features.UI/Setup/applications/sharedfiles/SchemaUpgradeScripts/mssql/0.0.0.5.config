ALTER PROCEDURE [dbo].[mp_SharedFiles_SelectByModule]

/*
Author:   			
Created: 			2005-01-05
Last Modified: 		2009-12-08

*/

@ModuleID		int,
@FolderID		int

AS
SELECT
		sf.[ItemID],
		sf.[ModuleID],
		sf.[UploadUserID],
		sf.[FriendlyName],
		sf.[OriginalFileName],
		sf.[ServerFileName],
		sf.[SizeInKB],
		sf.[UploadDate],
		sf.[FolderID],
		sf.ItemGuid,
		sf.FolderGuid,
		sf.UserGuid,
		sf.ModuleGuid,
		sf.[Description],
		u.[Name] As UserName
		
FROM
		[dbo].[mp_SharedFiles] sf

LEFT OUTER JOIN
		mp_Users u
ON		sf.UploadUserID = u.UserID

WHERE	sf.ModuleID = @ModuleID
		AND sf.FolderID = @FolderID
ORDER BY
	sf.[FriendlyName]
		


GO

SET ANSI_NULLS OFF
GO

SET QUOTED_IDENTIFIER OFF
GO



ALTER PROCEDURE [dbo].[mp_SharedFiles_SelectByPage]

/*
Author:			Joe Audettte
Created:		2005-07-04
Last Modified:	2009-12-08

*/


@SiteID		int,
@PageID		int

AS
SELECT  	sf.[ItemID],
		sf.[ModuleID],
		sf.[UploadUserID],
		sf.[FriendlyName],
		sf.[OriginalFileName],
		sf.[ServerFileName],
		sf.[SizeInKB],
		sf.[UploadDate],
		sf.[FolderID],
		sf.ItemGuid,
		sf.FolderGuid,
		sf.UserGuid,
		sf.ModuleGuid,
		sf.[Description],
		m.ModuleTitle,
		m.ViewRoles,
		md.FeatureName

FROM		mp_SharedFiles sf

JOIN		mp_Modules m
ON		sf.ModuleID = m.ModuleID

JOIN		mp_ModuleDefinitions md
ON		m.ModuleDefID = md.ModuleDefID

JOIN		mp_PageModules pm
ON			pm.ModuleID = m.ModuleID

JOIN		mp_Pages p
ON		p.PageID = pm.PageID

WHERE	p.SiteID = @SiteID
		AND pm.PageID = @PageID


GO

