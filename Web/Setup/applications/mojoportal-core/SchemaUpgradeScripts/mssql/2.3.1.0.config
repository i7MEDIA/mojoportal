ALTER PROCEDURE [dbo].[mp_FriendlyUrls_SelectBySiteUrl]

/*
Author:   			
Created: 			2006-09-10
Last Modified: 		2009-06-26
*/

@SiteID				int,
@FriendlyUrl		nvarchar(255)

AS
SELECT *
		
FROM
		[dbo].[mp_FriendlyUrls] u


WHERE	u.SiteID = @SiteID
		AND u.FriendlyUrl = @FriendlyUrl

GO

