/*
Author:   			
Created: 			2005-06-01
Last Modified: 		2009-06-26


*/
	
@UrlID int, 
@SiteID int, 
@FriendlyUrl nvarchar(255), 
@RealUrl nvarchar(255), 
@IsPattern bit ,
@PageGuid	uniqueidentifier

AS

UPDATE 		[dbo].[mp_FriendlyUrls] 

SET
			[SiteID] = @SiteID,
			[FriendlyUrl] = @FriendlyUrl,
			[RealUrl] = @RealUrl,
			[IsPattern] = @IsPattern,
			PageGuid = @PageGuid
			
WHERE
			[UrlID] = @UrlID

