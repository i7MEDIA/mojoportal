CREATE PROCEDURE [dbo].[mp_ForumPosts_SelectSortedThread]

/*
Author:				
Created:			2007-06-08
Last Modified:		2007-06-08


*/

@ThreadID			int

AS

SELECT	*
		
FROM		mp_ForumPosts


WHERE	ThreadID = @ThreadID
		

ORDER BY	ThreadSequence
