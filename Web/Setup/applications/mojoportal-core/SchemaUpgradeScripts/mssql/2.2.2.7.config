CREATE PROCEDURE [dbo].[mp_Roles_SelectRolesUserIsNotIn]

@SiteID	int,
@UserID  int

AS

SELECT  r.*

FROM		mp_Roles r
    		
    
LEFT OUTER JOIN 		
		mp_UserRoles ur

ON 		r.RoleID = ur.RoleID
		AND ur.UserID = @UserID

WHERE		r.SiteID = @SiteID
			AND ur.UserID IS NULL

ORDER BY	r.[DisplayName]
GO