CREATE PROCEDURE [dbo].[mp_FriendlyUrls_Exists]

/*
Author:			
Created:		2007-06-08
Last Modified:	2007-06-08

*/
    
@SiteID  	int,
@FriendlyUrl	nvarchar(255)

AS

IF EXISTS (	SELECT 	UrlID
		FROM		mp_FriendlyUrls
		WHERE	SiteID = @SiteID
				AND FriendlyUrl = @FriendlyUrl)
SELECT 1
ELSE
SELECT 0
GO
