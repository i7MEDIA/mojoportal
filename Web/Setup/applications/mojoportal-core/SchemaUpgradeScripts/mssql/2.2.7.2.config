CREATE Function [dbo].[PersianDay](@Date DateTime)

returns bigint

 

as

begin

declare @d1 bigint

set @d1=365

 

declare @d4 bigint

set @d4=4*@d1 +1

 

declare @d33 bigint

set @d33=33*@d1 +8

 

declare @ret bigint

declare @y bigint

declare @m bigint

declare @d bigint

 

set @d=cast(@Date as bigint)+422506

set @y=(@d/@d33)*33+122

set @d=@d % @d33

 

if(@d>(7*@d4+@d1))

Begin

   set @y=@y+1

   set @d=@d-@d1

End

set @y=@y+(@d/@d4)*4

set @d=@d % @d4

 

declare @i bigint

set @i=@d/@d1

set @d=@d%@d1;

if(@i=4)

Begin

   set @i=@i-1

   set @d=@d+@d1

End

set @y=@y+@i

 

if(@d<186)

Begin

   set @m=(@d/31)+1

   set @d=(@d%31)+1

end

Else

Begin

   set @d=@d-186

   set @m=(@d/30)+7

   set @d=(@d%30)+1

End

set @ret=@d

return @ret

end
GO
