ALTER PROCEDURE [dbo].[mp_LetterInfo_Insert]

/*
Author:   			
Created: 			2007-09-22
Last Modified: 		2009-10-23
*/

@LetterInfoGuid uniqueidentifier,
@SiteGuid uniqueidentifier,
@Title nvarchar(255),
@Description ntext,
@AvailableToRoles ntext,
@Enabled bit,
@AllowUserFeedback bit,
@AllowAnonFeedback bit,
