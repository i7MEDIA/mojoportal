ALTER PROCEDURE [dbo].[mp_SharedFiles_SelectByPage]

/*
Author:			Joe Audettte
Created:		7/4/2005
Last Modified:	2008-01-28

*/


@SiteID		int,
@PageID		int

AS
SELECT  	sf.[ItemID],
		sf.[ModuleID],
		sf.[UploadUserID],
		sf.[FriendlyName],
		sf.[OriginalFileName],
		sf.[ServerFileName],
		sf.[SizeInKB],
		sf.[UploadDate],
		sf.[FolderID],
		sf.ItemGuid,
		sf.FolderGuid,
		sf.UserGuid,
		sf.ModuleGuid,
		
		m.ModuleTitle,
		md.FeatureName

FROM		mp_SharedFiles sf

JOIN		mp_Modules m
ON		sf.ModuleID = m.ModuleID

JOIN		mp_ModuleDefinitions md
ON		m.ModuleDefID = md.ModuleDefID

JOIN		mp_PageModules pm
ON			pm.ModuleID = m.ModuleID

JOIN		mp_Pages p
ON		p.PageID = pm.PageID

WHERE	p.SiteID = @SiteID
		AND pm.PageID = @PageID

GO

