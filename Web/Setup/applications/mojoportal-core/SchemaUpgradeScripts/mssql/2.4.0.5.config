ALTER PROCEDURE [dbo].[mp_Users_UpdatePasswordAndSalt]


@UserID		int,
@PwdFormat int,
@Password	nvarchar(1000),
@PasswordSalt	nvarchar(128)


AS

UPDATE [dbo].mp_Users WITH (ROWLOCK)
SET Pwd = @Password,
	PasswordSalt = @PasswordSalt,
	PwdFormat = @PwdFormat

WHERE UserID = @UserID



GO

