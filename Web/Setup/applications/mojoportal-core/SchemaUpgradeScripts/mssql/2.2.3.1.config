ALTER PROCEDURE [dbo].[mp_SchemaScriptHistory_SelectByApp]

/*
Author:   			
Created: 			1/30/2007
Last Modified: 		1/30/2007
*/

@ApplicationID uniqueidentifier

AS


SELECT
		[ID],
		[ApplicationID],
		[ScriptFile],
		[RunTime],
		[ErrorOccurred],
		[ErrorMessage],
		[ScriptBody]
		
FROM
		[dbo].[mp_SchemaScriptHistory]

WHERE 
		[ApplicationID] = @ApplicationID
		-- AND [ErrorOccurred] = 0

ORDER BY [ID]
