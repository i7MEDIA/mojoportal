CREATE PROCEDURE [dbo].[mp_FriendlyUrls_GetSearchCount]

/*
Author:   			
Created: 			2010-02-16
Last Modified: 		2010-02-16
*/

@SiteID int,
@SearchTerm nvarchar(255)

AS

SELECT COUNT(*) 
FROM [dbo].[mp_FriendlyUrls]
WHERE SiteID = @SiteID
AND FriendlyUrl LIKE '%' + @SearchTerm + '%'


